<!-- views/password-changed-email.ejs -->
<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Password Changed</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      line-height: 1.6;
      color: #333;
      max-width: 600px;
      margin: 0 auto;
      padding: 20px;
    }
    .container {
      border: 1px solid #ddd;
      border-radius: 5px;
      padding: 20px;
    }
    .header {
      text-align: center;
      padding-bottom: 20px;
      border-bottom: 1px solid #eee;
      margin-bottom: 20px;
    }
    .header h1 {
      color: #4a4a4a;
      margin: 0;
    }
    .content {
      margin-bottom: 20px;
    }
    .footer {
      margin-top: 20px;
      text-align: center;
      font-size: 0.8em;
      color: #777;
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="header">
      <h1>Password Changed</h1>
    </div>
    <div class="content">
      <p>Hello {{username}},</p>
      <p>Your password for Media Admin has been successfully changed.</p>
      <p>If you did not make this change, please contact the administrator immediately.</p>
    </div>
    <div class="footer">
      <p>This is an automated email, please do not reply.</p>
      <p>Media Admin &copy; 2025</p>
    </div>
  </div>
</body>
</html>