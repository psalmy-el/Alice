<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/masonry/4.2.2/masonry.pkgd.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/imagesloaded/4.1.4/imagesloaded.pkgd.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/css/homepage.css">

    <title><%= title %></title>
</head>
<body>
    <!-- Header -->
    <header>
        <div class="container">
            <div class="header-inner">
                <a href="/" class="logo">
                    <img src="<%= logoPath %>" alt="<%= companyName %>" class="logo-img">
                </a>
                <button class="nav-toggle">☰</button>
                <nav class="main-nav">
                    <button class="close-nav">✕</button>
                    <ul>
                        <li><a href="#" class="about-link">About</a></li>
                        <li><a href="/contact">Contact</a></li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle">Categories</a>
                            <ul class="dropdown-menu">
                                <li><a href="#" data-category="all">All</a></li>
                                <% categories.forEach(category => { %>
                                <li><a href="#" data-category="<%= category.id %>"><%= category.name %></a></li>
                                <% }); %>
                            </ul>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </header>

    <!-- Video Intro Section -->
    <section class="intro-section">
        <div class="intro-container">
            <div class="intro-video-wrapper">
                <video class="intro-background-video" autoplay loop muted playsinline>
                    <source src="<%= introVideo %>" type="video/mp4">
                    Your browser does not support the video tag.
                </video>
                <div class="intro-overlay">
                    <h1 class="intro-heading"><%= introHeading %></h1>
                    <p class="intro-description"><%= introDescription %></p>
                    <a href="/contact" class="contact-button">Contact Us</a>
                </div>
            </div>
        </div>
    </section>

    <!-- Video Grid Section -->
    <section class="video-grid-section" id="video-grid-section">
        <div class="container">
            <div class="video-grid">
                <% allMedia.forEach(item => { %>
                    <!-- Make sure the data-category attribute is the category_id, not the category name -->
                    <div class="grid-item" data-category="<%= item.category_id %>">
                        <% if(item.type === 'image') { %>
                            <!-- For images, link to the gallery page -->
                            <a href="/gallery/<%= item.id %>" class="grid-item-inner">
                                <img src="<%= item.file_path %>" alt="<%= item.title %>">
                                <div class="grid-item-overlay">
                                    <h3 class="grid-item-title"><%= item.title %></h3>
                                    <p class="grid-item-category"><%= item.category_name %></p>
                                </div>
                            </a>
                        <% } else if(item.type === 'video') { %>
                            <div class="grid-item-inner" data-video-src="<%= item.file_path %>">
                                <% if (item.file_path) { %>
                                    <% if(item.type === 'video') { %>
                                        <% if (item.file_path) { %>
                                            <video <% if (item.poster_image) { %>poster="<%= item.poster_image %>"<% } %>>
                                                <source src="<%= item.file_path %>" type="video/mp4">
                                                Your browser does not support the video tag.
                                              </video>
                                        <% } else { %>
                                          <div class="media-placeholder">
                                            <span>Media unavailable</span>
                                          </div>
                                        <% } %>
                                      <% } %>
                                    <div class="play-button"></div>
                                <% } else { %>
                                    <!-- Handle broken item gracefully -->
                                    <div class="broken-item">
                                        <p>Media unavailable</p>
                                    </div>
                                <% } %>
                                <div class="grid-item-overlay">
                                    <h3 class="grid-item-title"><%= item.title %></h3>
                                    <p class="grid-item-category"><%= item.category_name %></p>
                                </div>
                            </div>
                        <% } %>
                    </div>
                <% }); %>
            </div>
        </div>
    </section>
<!-- And make sure the category dropdown has the correct data-category values -->
<ul class="dropdown-menu">
    <li><a href="#" data-category="all">All</a></li>
    <% categories.forEach(category => { %>
    <li><a href="#" data-category="<%= category.id %>"><%= category.name %></a></li>
    <% }); %>
</ul>

    <!-- Video Modal -->
    <div class="video-modal">
        <div class="modal-content">
            <button class="close-modal">&times;</button>
            <video class="modal-video" controls>
                <source src="" type="video/mp4">
                Your browser does not support the video tag.
            </video>
        </div>
    </div>

    <!-- About Modal -->
    <div class="modal fade" id="aboutModal" tabindex="-1" aria-labelledby="aboutModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="aboutModalLabel">About Engdahls & Co</h5>
              
            </div>
            <button type="button" class="btn-close" aria-label="Close"></button>
            <div class="modal-body">
              <% if (typeof aboutText !== 'undefined' && aboutText.length > 0) { %>
                <% aboutText.forEach(paragraph => { %>
                  <p><%= paragraph %></p>
                <% }); %>
              <% } else { %>
                <p>Engdahls & Co Creative Studios is a versatile production company specializing in high-quality commercial films and video productions that tell engaging stories for clients worldwide.</p>
                <p>Our passionate team of directors, cinematographers, and editors work collaboratively to bring your vision to life with stunning visuals and compelling narratives.</p>
              <% } %>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary">Close</button>
            </div>
          </div>
        </div>
    </div>

    <!-- Footer -->
    <footer>
        <div class="footer-container">
            <!-- Column 1: Quick Links -->
            <div class="footer-column">
                <h3>Quick Links</h3>
                <ul class="footer-links">
                    <% quickLinks.forEach(link => { %>
                        <li><a href="<%= link.url %>" <% if(link.class) { %>class="<%= link.class %>"<% } %>><%= link.name %></a></li>
                    <% }); %>
                </ul>
            </div>
    
            <!-- Column 2: Services -->
            <div class="footer-column">
                <h3>Our Services</h3>
                <ul class="footer-links">
                    <% services.forEach(service => { %>
                        <li><a href="<%= service.url %>"><%= service.name %></a></li>
                    <% }); %>
                </ul>
            </div>
     
            <!-- Column 3: Contact Info (now with social icons) -->
            <div class="footer-column">
                <h3>Contact Us</h3>
                <% contactInfo.forEach(info => { %>
                    <div class="contact-info">
                        <span class="contact-info-icon"><%= info.icon %></span>
                        <span class="contact-info-text"><%= info.text %></span>
                    </div>
                <% }); %>
                <!-- Social links moved to contact section -->
                <div class="social-links">
                    <% socialLinks.forEach(function(link) { %>
                      <a href="<%= link.url %>" class="social-link" title="<%= link.name %>" target="_blank" rel="noopener">
                        <i class="<%= link.icon %>"></i>
                      </a>
                    <% }); %>
                </div>
            </div>
        </div>
    
        <div class="container">
            <div class="footer-bottom">
                <p class="copyright">© <%= currentYear %> <%= companyName %>. All Rights Reserved.</p>
            </div>
        </div>
    </footer>

    <!-- JavaScript -->
    <script src="/js/homepage.js"></script>
</body>
</html>